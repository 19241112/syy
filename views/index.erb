      <script type="text/javascript">
	window.onload = function(){
	    let elements = document.querySelectorAll('#data td');
	    for (const [i, e] of elements.entries()) {
		e.id = `,${i}`;
	    }
	    console.log(elements);
	}
	
	/* テーブル要素取得 */
	var data = document.getElementById("data");
	var time = document.getElementById("time");
	/* クリックイベント */
	data.onclick = function(evt){
	    // イベント発生源
	    var target = evt.target || event.srcElement ;
	    // 背景色を切り替える
	    if( ( target.tagName || "" ).match(/td/i) ){
		target.style.backgroundColor =
		    target.style.backgroundColor ? "" : "#F3FF83" ;
	    }
	    time.value = ""
	    for (var i = 0; i < 372; i++) {
		if (document.getElementById(","+i).style.backgroundColor != "") { // ","+i  ','+i
		    time.value += (','+i)
		}
	    }
            console.log(time.value);
	    
	    function check(){
		if(window.confirm('送信してよろしいですか？')){ // 確認ダイアログを表示
		    return true; // 「OK」時は送信を実行
		}
		else{ // 「キャンセル」時の処理
		    window.alert('キャンセルされました'); // 警告ダイアログを表示
		    return false; // 送信を中止
		}
	    }
	}
